<%= stylesheet_link_tag 'login-style' %>
<style>
  #search-bar {
    margin-bottom: -0.7em;
  }
</style>

<div class="container-scroller">
  <div class="container-fluid">
    <div class="row">
      <div class="content-wrapper full-page-wrapper d-flex align-items-center auth-pages">
        <div class="card col-lg-4 mx-auto">
          <div class="card-body px-5 py-5">
            <h3 class="card-title text-center mb-3">Entrar</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email",class: "form-control p_input" %>
              </div>

              <div class="form-group">
                <%= f.label :senha %><br />
                <%= f.password_field :password, autocomplete: "off",placeholder: "Senha",class: "form-control p_input" %>
              </div>

              <div class="actions">
                <%= f.submit "Entrar",class: "btn btn-success btn-block enter-btn",style: "margin-bottom: 5px; margin-top: 18px;" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

            <p class="Or-login-with my-3">Ou entre com</p>
            <a href="#" class="facebook-login btn btn-facebook btn-block">Entrar com Facebook</a>
            <a href="#" class="google-login btn btn-google btn-block">Entrar com Google</a>

        </div>
      </div>
    </div>
  </div>
</div>

