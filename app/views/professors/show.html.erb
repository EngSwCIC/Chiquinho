<div class="container" style="margin-top: 5%">
  <div class="teacher-header professor-profile-image">
    <div class="row">
      <div class="col-md-4 offset-4">
        <div class="col-md-4 offset-2">
          <img src="http://www.cic.unb.br/wp-content/uploads/2015/11/Genaina-150x150.jpg" alt="GenaÃ­na" class="image-thumbnail"/>
        </div>
      </div>
    </div>
  </div>
  <hr style="width: 50%;">
  <h2 style="text-align: center;"><%= @professor.name %></h2>
  <div class="professor-subjects" style="margin-top: 10%;">
    <h4>Materias Ministradas</h4>
    <% @professor.subjects.each do |subject|%>
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h6 class="card-title"><%= subject.name %></h6>
            <p>codigo: <%=subject.code%></p>
            <p>area: <%=subject.area%></p>
            <p>creditos: <%=subject.credits%></p>
            <%= link_to 'Explorar', subject_path(subject), class: "btn btn-md btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
