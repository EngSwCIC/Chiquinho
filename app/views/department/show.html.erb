<div class="row" style="margin-top:7%;">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3><%= @department.name %></h3>
        <h4 style="text-align:center;"><%= @department.initial %></h5>
        <p  style="text-align:center;"><%= @department.code %></p>
    </div>       
</div>
<div class="row" style="margin-top:10%;">
    <div class="col-md-6">
        <h4 style="text-align:center;">Cursos:</h2>
        <% @courses.each do |course| %>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5><%= course.name %></h5>
                        </div>
                        <div class="card-body">
                            <%= link_to "ver Curso", course_path(course), class: "btn btn-md btn-primary"%>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-md-6">
        <h4 style="text-align:center;">Professores:</h4>
        <% @professors.each do |professor| %>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5><%= professor.name %></h5>
                        </div>
                        <div class="card-body">
                            <%= link_to "ver Professor", professor_path(professor), class: "btn btn-md btn-primary"%>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>