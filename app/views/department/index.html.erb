<div class="row">
  <div class="col-md-12">
    <div class="panel panel-white">
      <div class="panel-heading clearfix">
        <h2 class="panel-title">Departamento</h2>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table id="example1" class="table table-bordered table-hover display">
            <thead>
            <tr>
              <th>Codigo</th>
              <th>Nome</th>
              <th>Sigla</th>
              <th>Detalhes</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
              <th>Codigo</th>
              <th>Nome</th>
              <th>Sigla</th>
              <th>Detalhes</th>
            </tr>
            </tfoot>
            <tbody>
            <% @departments.each do |department| %>
              <tr>
                <td><%= department.code %></td>
                <td><%= department.name %></td>
                <td><%= department.initial %></td>
                <td align="center"><%= link_to "Detalhes <i class='fa fa-external-link'></i>".html_safe, department_path(department),class: "label label-info" %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<%#= link_to 'New Course', new_course_path %>

