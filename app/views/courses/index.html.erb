<h1 align="center">Courses</h1>

<div class="card-body">
  <div class="table-responsive">
    <table id="example1" class="table table-bordered table-hover display">
      <thead>
        <tr>
          <th>Tipo</th>
          <th>Código</th>
          <th>Curso</th>
          <th>Período</th>
          <th>Classificação</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.kind %></td>
            <td><%= course.code %></td>
            <td><%= course.name %></td>
            <td><%= course.turn %></td>
            <td><%= course.classification %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<br>

<%#= link_to 'New Course', new_course_path %>

<!-- BEGIN Java Script for this page -->>

<script src="https://cdn.datatables.net/2.4.0/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.4.0/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function(){
        $('#example1').dataTable({
            "oLanguage": {
                "sLengthMenu": "Mostrar _MENU_ cursos por página",
                "sZeroRecords": "Nenhum registro encontrado - sorry",
                "sInfo": "Mostrando página _PAGE_ de _PAGES_",
                "sInfoEmpty": "Nenhum campo encontrado",
                "sInfoFiltered": "(filtrando de _MAX_ total de campos)",
                "sSearch": "Procurar:",
                "oPaginate": {
                    "sNext": "Próximo",
                    "sPrevious": "Anterior"
                }
            }
        });
    });
</script>