<div class="margin-all" style="margin: 30px;">
  <h2><%= @subject.name %></h2>
  <hr>
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <h5 class="card-header">
          Dados da Matéria
        </h5>
        <div class="card-body" style="padding: 15px;">
          <table class="table">
            <tr>
              <th>
                Código
              </th>
              <td>
                <%= @subject.code %>
              </td>
            </tr>
            <tr>
              <th>
                Nome
              </th>
              <td>
                <%= @subject.name %>
              </td>
            </tr>
            <tr>
              <th>
                Créditos
              </th>
              <td>
                <%= @subject.credits %>
              </td>
            </tr>
            <tr>
              <th>
                Área
              </th>
              <td>
                <%= @subject.area %>
              </td>
            </tr>
            <tr>
              <th>
                Ranking de Dificuldade
              </th>
              <td>
                #16
              </td>
            </tr>
          </table>
        </div>
        <div class="card-body-graph">
          <canvas id="barChart"></canvas>
        </div>
      </div>
    </div>
    <div class="col-md-7">
      <div class="card">
        <h5 class="card-header">
          Professores que Ministram
        </h5>
        <div class="card-body" style="padding: 15px;">
          <div class="row">
            <div class="col-md-6">
              <div class="teacher-header">
                <img src="http://www.cic.unb.br/wp-content/uploads/2015/11/Genaina-150x150.jpg" alt="Genaína" class="image-thumbnail"/>
                <p>Genaína Rodrigues</p>
              </div>
              <div class="card-body-graph">
                <canvas id="barChartGenaina"></canvas>
              </div>
              <%= link_to "<i class='fa fa-star'></i> Avaliar".html_safe,"#",class: "btn btn-primary btn-sm"%>
            </div>
            <div class="col-md-6">
              <div class="teacher-header">
                <img src="http://www.cic.unb.br/wp-content/uploads/2016/05/flavio2-150x150.jpg" alt="Flavio" class="image-thumbnail"/>
                <p>Flávio Moura</p>
              </div>
              <div class="card-body-graph">
                <canvas id="barChartFlavio"></canvas>
              </div>
              <%= link_to "<i class='fa fa-star'></i> Avaliar".html_safe,"#",class: "btn btn-primary btn-sm" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-6">
              <div class="teacher-header">
                <img src="http://www.cic.unb.br/wp-content/uploads/2016/03/lamar-150x150.png" alt="Lamar" class="image-thumbnail"/>
                <p>Lamar</p>
              </div>
              <div class="card-body-graph">
                <canvas id="barChartLamar"></canvas>
              </div>
              <%= link_to "<i class='fa fa-star'></i> Avaliar".html_safe,"#",class: "btn btn-primary btn-sm" %>
            </div>
            <div class="col-md-6">
              <div class="teacher-header">
                <img src="http://www.cic.unb.br/wp-content/uploads/2017/03/vinicius_siteCIC-150x150.png" alt="Vinicius" class="image-thumbnail"/>
                <p>Vinicius Ruela</p>
              </div>
              <div class="card-body-graph">
                <canvas id="barChartVinicius"></canvas>
              </div>
              <%= link_to "<i class='fa fa-star'></i> Avaliar".html_safe,"#",class: "btn btn-primary btn-sm" %>
            </div>
          </div>
          <hr>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-7">
      <div class="card">
        <h5 class="card-header">
          Conteúdos
        </h5>
        <div class="card-body" style="padding: 15px;">
          <table class="table" id="example1">
            <thead>
              <tr>
                <th>
                  Arquivo
                </th>
                <th>
                  Descrição
                </th>
                <th>
                  Baixar
                </th>
              </tr>
            </thead>
            <tbody>
              <% 20.times do %>
                <tr>
                  <td>Resumo de OAC</td>
                  <td>Resumo de 7 páginas sobre Assembly e o Processador MIPS</td>
                  <td><%= link_to "<i class='fa fa-download'></i> Baixar".html_safe,"#",class: "btn btn-success btn-sm btn-rounded" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card">
        <h5 class="card-header">
          Comentários
        </h5>
        <div class="card-body">
          <div class="comentario-header">
            <i class="fa fa-user-circle"></i> Nicholas Marques
